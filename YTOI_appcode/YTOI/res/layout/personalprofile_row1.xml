<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="80dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.50"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/personalprofile_Textview_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AGNI KAPOOR"
                        android:textColor="@color/line_color"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/personalprofile_Textview_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BEST COFEE I HAD"
                        android:textColor="@color/black"
                        android:textSize="@dimen/btn_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent" 
                    android:layout_weight="0.50"
                    android:gravity="center">
                     <TextView
                            android:id="@+id/personalprofile_Textview_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                           
                              android:singleLine="true"
                            android:textSize="3pt" />

                        <TextView
                            android:id="@+id/personalprofile_Textview_HoursInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:text="HOURS AGO"
                          
                            android:textSize="3pt" />
                </LinearLayout>

             
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    

    <ImageView
        android:id="@+id/personalprofile_Imageview_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2"
       android:background="@drawable/images"  />
    
    <ImageView
        android:id="@+id/personalprofile_Imageview_userimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/no_image" />

</RelativeLayout>