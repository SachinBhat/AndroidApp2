<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
      
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" 
             android:layout_gravity="center">

            <ImageView
                android:id="@+id/headermain_Imageview_Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:padding="5dp"            
                android:src="@drawable/top_menu" />

            <TextView
                android:id="@+id/headermain_Textview_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
            
              android:paddingBottom="7dp"
                android:text="HOME"
                android:textColor="@color/line_color"
                android:textSize="4pt"
                android:singleLine="true"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/headermain_Imageview_icon"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/top_logo" />

        <TableRow
            android:id="@+id/headermain_tableRow"
            android:layout_width="0dp"
            android:layout_weight="1"
             android:layout_gravity="center"
             android:gravity="right"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/headermain_img_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                 android:padding="5dp"   
                android:src="@drawable/top_notification" />

            <ImageView
                android:id="@+id/headermain_img_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                 android:padding="5dp"   
                android:layout_marginRight="10dp"
                android:src="@drawable/top_search" />
        </TableRow>
    </LinearLayout>

</LinearLayout>